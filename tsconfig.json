{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "emitDecoratorMetadata": true,
    "baseUrl": ".",
    "paths": {
      "@*": [
        "./src/*",
        "./dist/*"
      ],
    },
  },
  "include": [
    "src/**/*.ts"
  ]
}